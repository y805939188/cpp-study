{
// 有关 tasks.json 格式的文档，请参见
  // https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-l",
        "/Users/dingyubo/Desktop/c++test/mylib/**",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        // "-stdlib",
        // "libstdc++",
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}